---

import Layout from '../layouts/Layout.astro';

import Hero from '../components/Hero.astro';
import Services from '../components/Services.astro';
import Skills from '../components/Skills.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';

---

<Layout>
	<main class="container mx-auto px-4 pb-16 max-w-4xl relative">
		<!-- Decorative background elements -->
		<div class="absolute top-0 right-0 w-1/3 h-1/4 bg-gradient-to-br from-primary/30 to-transparent rounded-full blur-3xl -z-10"></div>
		<div class="absolute bottom-0 left-0 w-1/2 h-1/3 bg-gradient-to-tr from-secondary/20 to-transparent rounded-full blur-3xl -z-10"></div>

		<Hero />
		<Services />
		<Skills />
		<Contact />
		<Footer />
	</main>
</Layout>
