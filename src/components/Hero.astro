---

const heroInfo = {
	name: 'Finn Groenewoud',
	subtitle: 'Full Stack Software Engineer',
	description: 'Crafting modern web experiences with a focus on performance and user experience.',
};

---

<section class="min-h-screen flex items-center justify-center relative">
	<div class="flex flex-col items-center text-center">
		<h1 class="text-5xl font-bold tracking-tight mb-4 bg-gradient-to-r from-primary to-secondary text-transparent bg-clip-text">
			{ heroInfo.name }
		</h1>
		<p class="text-xl text-black font-semibold mb-6">
			{ heroInfo.subtitle }
		</p>
		<p class="text-gray-500 max-w-lg mb-8">
			{ heroInfo.description }
		</p>
		<button
		onclick="document.getElementById('services').scrollIntoView({ behavior: 'smooth' })"
		class="px-8 py-3 rounded-full bg-gradient-to-r from-primary to-secondary text-white hover:opacity-90 transition-opacity duration-300"
		>
		View My Services
		</button>
	</div>
</section>
